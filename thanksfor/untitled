def cropImage(submission):
    # Crop Image
    try:  
        image_file = StringIO.StringIO(new_image_submission.image.read())
        image = Image.open(image_file)
        image = image.resize((600, 800), Image.ANTIALIAS)
    except:
        return HttpResponse(
            json.dumps(['Error Resizing Image']),
            content_type='application/javascript'
        )
    try:  
        image_file = StringIO.StringIO()
    except:
        return HttpResponse(
            json.dumps(['Error With String IO']),
            content_type='application/javascript'
        )
    try:  
        image.save(image_file)
    except:
        return HttpResponse(
            json.dumps(['Image Could Not Be Saved']),
            content_type='application/javascript'
        )
    # image.save(image_file, quality=90)

    # Save Image Again
    try:  
        new_image_submission.image = image_file
        new_image_submission.save()
    except:
        return HttpResponse(
            json.dumps(['Error Adding Image to Submission']),
            content_type='application/javascript'
        )